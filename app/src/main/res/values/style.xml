<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="botones_primarios" parent="NormalTextFragment">
        <item name="android:stateListAnimator">@null</item>
        <item name="android:background">@drawable/selector_boton_primario</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:elevation">0dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="botones_secundarios" parent="NormalTextFragment">
        <item name="android:stateListAnimator">@null</item>
        <item name="android:background">@drawable/selector_boton_secundario</item>
        <item name="android:textColor">@color/green_500</item>
        <item name="android:elevation">0dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="boton_login_registrate">
        <item name="android:textAllCaps">false</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:background">@drawable/selector_boton_primario_blanco</item>
        <item name="android:textColor">@color/green_500</item>
        <item name="android:elevation">0dp</item>
    </style>

    <style name="detalles_smart_solar_text_input_edit_text" parent="NormalTextFragment">
        <item name="android:background">@color/white</item>
        <item name="android:inputType">none</item>
        <item name="android:focusable">false</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="login_text_input_edit_text" parent="NormalTextFragment">
        <item name="android:background">@color/white</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="TitleFragment">
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="SubTitleFragment">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="NormalTextFragment">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="NormalTextDialogFragment">
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="SubTitleItem">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="CommentTextItem">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="NormalTextItem">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="toolbar_detalle_button_back">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/green_500</item>
    </style>
</resources>