<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="botones_primarios">
        <item name="android:stateListAnimator">@null</item>
        <item name="android:background">@drawable/selector_boton_primario</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:elevation">0dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="botones_secundarios">
        <item name="android:stateListAnimator">@null</item>
        <item name="android:background">@drawable/selector_boton_secundario</item>
        <item name="android:textColor">@color/green_500</item>
        <item name="android:elevation">0dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="DetallesSmartSolar_TextInputEditText">
        <item name="android:background">@color/white</item>
        <item name="android:inputType">none</item>
        <item name="android:focusable">false</item>
        <item name="android:clickable">true</item>
        <item name="android:text">Null</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TitleFragment">
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="toolbar_detalle_button_back">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/green_500</item>
        <item name="android:drawableLeft">@drawable/baseline_keyboard_arrow_left_24</item>
    </style>
</resources>