<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ListaFacturasV02" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/green_500</item>
        <item name="colorPrimaryVariant">@color/white
        </item> <!-- Cambiar el color de la barra arriba de la toolbar -->
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/green_500</item>
        <item name="colorSecondaryVariant">@color/green_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant
        </item> <!-- Cambiar el color de la barra arriba de la toolbar -->
        <!-- ?attr/colorPrimaryVariant -->
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.ListaFacturasV02.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="elevation">0dp</item>
    </style>

    <style name="ToolbarTheme" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <!-- Customize color of navigation drawer icon and back arrow -->
        <item name="colorControlNormal">@color/green_500</item>
    </style>

    <style name="Theme.ListaFacturasV02.AppBarOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.ListaFacturasV02.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>