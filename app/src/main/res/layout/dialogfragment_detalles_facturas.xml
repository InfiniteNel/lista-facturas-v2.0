<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tvInformacionDetallesFacturas"
        style="@style/SubTitleFragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_size_24"
        android:text="@string/tvInformacionDetallesFacturasText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvNoFuncionalDetallesFacturas"
        style="@style/NormalTextDialogFragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_size_16"
        android:layout_marginTop="@dimen/dimen_size_24"
        android:layout_marginEnd="@dimen/dimen_size_16"
        android:text="@string/tvNoFuncionalDetallesFacturasText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvInformacionDetallesFacturas" />

    <Button
        android:id="@+id/btCerrarPopUpDetallesFacturas"
        style="@style/botones_primarios"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_size_24"
        android:layout_marginBottom="@dimen/dimen_size_24"
        android:text="@string/btCerrarPopUpDetallesFacturasText"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/tvInformacionDetallesFacturas"
        app:layout_constraintStart_toStartOf="@+id/tvInformacionDetallesFacturas"
        app:layout_constraintTop_toBottomOf="@+id/tvNoFuncionalDetallesFacturas" />

</androidx.constraintlayout.widget.ConstraintLayout>